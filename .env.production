# Production Environment Variables for Fly.io
# These should be set as secrets in Fly.io using: fly secrets set KEY=VALUE

# Server Configuration
NODE_ENV=production
PORT=3001

# Beds24 API Configuration
BEDS24_API_KEY=your_production_beds24_api_key
BEDS24_PROP_KEY=your_production_beds24_property_key
BEDS24_WEBHOOK_SECRET=your_production_webhook_secret

# Supabase Configuration
SUPABASE_URL=your_production_supabase_project_url
SUPABASE_ANON_KEY=your_production_supabase_anon_key
SUPABASE_SERVICE_KEY=your_production_supabase_service_role_key

# Email Service (Resend)
RESEND_API_KEY=your_production_resend_api_key

# JWT Secret
JWT_SECRET=your_production_jwt_secret_here

# App Configuration
FRONTEND_URL=https://app.staylabel.com
ADMIN_EMAIL=admin@yourhotel.com
